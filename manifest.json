{
  "manifest_version": 2,

  "name": "Hometype",
  "description": "provide key board manipulation",
  "version": "2.1.1",

  "permissions": [
    "tabs",
    "bookmarks",
    "webNavigation",
    "storage",
    "management",
    "clipboardRead",
    "<all_urls>"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "default_locale": "en",

  "background": {
    "persistent": false,
    "scripts": [
      "src/lib/utility.js",
      "src/lib/jquery-2.0.1.min.js",
      "src/background/favicon.js",
      "src/background/history.js",
      "src/background/tab.js",
      "src/background/script.js"
    ]
  },

  "options_page": "options/options.html",

  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "css": [ "css/main.css" ],
    "js": [
      "src/lib/jquery-2.0.1.min.js",
      "src/lib/jquery.extend.js",
      "src/lib/utility.js",
      "src/lib/dom.js",
      "src/lib/jp.js",
      "src/lib/element_wrapper.js",
      "src/content_scripts/constants.js",
      "src/content_scripts/default_option.js",
      "src/content_scripts/options.js",
      "src/content_scripts/key/identifiers.js",
      "src/content_scripts/key/sequence.js",
      "src/content_scripts/key/map.js",
      "src/content_scripts/viewport.js",
      "src/content_scripts/box/select.js",
      "src/content_scripts/box/command.js",
      "src/content_scripts/box/help.js",
      "src/content_scripts/hint/action.js",
      "src/content_scripts/hint/action_map.js",
      "src/content_scripts/hint/letter_conversion.js",
      "src/content_scripts/hint/algorithm/standard.js",
      "src/content_scripts/hint/algorithm/comfortable.js",
      "src/content_scripts/hint/algorithm/custom.js",
      "src/content_scripts/hint/key_factory.js",
      "src/content_scripts/hint/element.js",
      "src/content_scripts/hint/element_collection.js",
      "src/content_scripts/processor/noop.js",
      "src/content_scripts/processor/visual.js",
      "src/content_scripts/processor/command.js",
      "src/content_scripts/processor/hint.js",
      "src/content_scripts/processor/insert.js",
      "src/content_scripts/processor/help.js",
      "src/content_scripts/filter.js",
      "src/content_scripts/command.js",
      "src/content_scripts/executer.js",
      "src/content_scripts/homedics.js",
      "src/content_scripts/mode.js",
      "src/content_scripts/main.js"
    ],
    "run_at": "document_start"
  }],
  "web_accessible_resources": [
    "dicts/*.ml"
  ]
}
