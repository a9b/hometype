{
  "manifest_version": 2,

  "name": "Chromekey",
  "description": "provide key board manipulation for GoogleChrome",
  "version": "0.1",

  "permissions": [
    "tabs",
    "bookmarks",
    "<all_urls>"
  ],
  
  "background": {
    "persistent": true,
    "page": "background/background.html"
  },

  "options_page": "options/options.html",

  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "css": [
      "css/main.css"
    ],
    "js": [
      "lib/jquery-2.0.1.min.js",
      "lib/jquery.extend.js",
      "lib/utility.js",
      "js/default_option.js",
      "js/options.js",
      "js/key/identifiers.js",
      "js/key/sequence.js",
      "js/key/map.js",
      "js/viewport.js",
      "js/bookmarks.js",
      "js/command_box.js",
      "js/hint/element.js",
      "js/hint/element_collection.js",
      "js/processor/noop.js",
      "js/processor/visual.js",
      "js/processor/command.js",
      "js/processor/hint.js",
      "js/command.js",
      "js/mode.js",
      "js/config.js",
      "js/main.js"
    ],
    "run_at": "document_start"
  }]
}
